{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ASM STUDIO",
  "version": "0.1.0",
  "identifier": "com.girisakar365.asmstudio",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://127.185.243.17:4916",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "ASM STUDIO",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": "default-src 'self' tauri://localhost; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; connect-src 'self' http://127.0.0.1:* http://localhost:* http://127.185.243.17:* ws://127.185.243.17:* ws://localhost:*"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "resources/backend/*": "resources/backend"
    }
  }
}
